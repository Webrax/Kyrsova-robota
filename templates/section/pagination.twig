<nav aria-label="Blog pagination"> <!--пагінація (переключення сторінок знизу)-->
    <ul class="pagination">
        {% if pagination.current > 1 %} <!--логіка для повертання назад-->
        <li class="page-item"><a class="page-link" href="{{ url('blog/' ~ (pagination.current - 1)) }}">Previous</a></li>
        {% endif %}
        {% for page in 1..pagination.paging %} <!--відмальовуємо сторінки, які знаходяться в пейджінг
        (index.php)-->
        <li class="page-item {% if pagination.current == page %} active {% endif %}">
            <a class="page-link" href="{{ url('blog/' ~ page) }}">{{ page }}</a> <!-- ~ page - це Конкатенація (операція склеювання рядків) -->
        </li> <!--показ нумерації сторінки-->
        {% endfor %}
        {% if pagination.current < pagination.paging %} <!--логіка для переходу на наступну сторінку-->
        <li class="page-item"><a class="page-link" href="{{ url('blog/' ~ (pagination.current + 1)) }}">Next</a></li>
        {% endif %}
    </ul>
</nav>