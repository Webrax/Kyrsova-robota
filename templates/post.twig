{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        {% if post.image_path is not null %} {# вивід картинки до посту з БД #}
        <img src="{{ asset_url(post.image_path) }}" class="img-fluid" alt="{{ post.title | escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3">{{ post.title | escape }}</h1> <!--escape - екранування(блок скріптів JS, не допущення їх роботи) -->
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted"> Малевич Юрій | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            <span>
                {{ post.content | raw }} {# відмалювання контенту з БД #}
            </span>
        </div>
    </div>
{% endblock %}