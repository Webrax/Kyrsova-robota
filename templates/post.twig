{% extends 'base.twig' %}

{% block body %}
    <div class="container">

        <img src="https://dummyimage.com/1200x400/5b76ba/ffffff" class="img-fluid" alt="...">

        <h1 class="mt-3 mb-3">{{ post.title | escape }}</h1> <!--escape - екранування(блок скріптів JS, не допущення їх роботи) -->
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted">Malevych Yurii | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            <span>
                {{ post.content | raw }} {# відмалювання контенту з БД #}
            </span>
        </div>
    </div>
{% endblock %}